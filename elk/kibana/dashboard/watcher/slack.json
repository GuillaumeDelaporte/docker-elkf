{
  "trigger": {
    "schedule": {
      "interval": "1m"
    }
  },
  "input": {
    "search": {
      "request": {
        "body": {
          "size": 0,
          "query": {
            "term": {"return_code":200}
          }
        },
        "indices": [
          "access-*"
        ]
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "gte": 10
      }
    }
  },
  "actions" : {
  "notify-slack" : {
    "throttle_period" : "1m",
    "slack" : {
      "account" : "openioteam",
      "message" : {
        "from" : "kibana",
        "to" : [ "#elk-alerting-test", "@papebadiane" ],
        "text" : "System X Monitoring",
        "attachments" : [
          {
            "title" : "Errors Found",
            "text" : "Encountered  {{ctx.payload.hits.total}} errors in the last 5 minutes (facepalm)",
            "color" : "danger"
          }
        ]
      }
    }
  }
}
}
